<style>
  /* UPGRADED: ultra-realistic / premium polish for edit form
     ONLY visual/UX changes — no server-side behavior or form names changed. */
  :root{
    --gold: #d4a300;
    --gold-dark: #b38b00;
    --muted: #6b7280;
    --muted-2: #94a3b8;
    --muted-3: #9aa3b2;
    --surface: #ffffff;
    --card-radius: 16px;
    --soft-shadow: 0 10px 30px rgba(16,24,40,0.06);
    --xl-shadow: 0 26px 80px rgba(16,24,40,0.10);
    --focus-ring: rgba(212,163,0,0.14);
    --glass-border: rgba(15,23,42,0.05);
    --accent: rgba(212,163,0,0.06);
    --input-height: 46px;
    --ui-gap: 12px;
    --radius-sm: 10px;
    --radius-lg: 14px;
    --ui-font: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  }

  body { font-family: var(--ui-font); color:#071124; -webkit-font-smoothing:antialiased; -moz-osx-font-smoothing:grayscale; }

  .listing-card {
    border-radius: var(--card-radius);
    overflow: hidden;
    border: 1px solid var(--glass-border);
    background:
      radial-gradient(circle at 10% 8%, rgba(255,255,255,0.92), rgba(255,255,255,0.6) 6%, transparent 22%),
      linear-gradient(180deg, #fffdfb 0%, rgba(212,163,0,0.02) 14%, #fbfcfe 48%, #f7fbff 100%);
    box-shadow: var(--xl-shadow);
    transition: transform .16s cubic-bezier(.2,.9,.28,1), box-shadow .16s ease;
    will-change: transform;
  }
  .listing-card:hover { transform: translateY(-6px); box-shadow: 0 44px 110px rgba(16,24,40,0.14); }

  .listing-card .card-header {
    padding: 1.05rem 1.5rem;
    border-bottom: 1px solid rgba(15,23,42,0.03);
    background: linear-gradient(90deg, rgba(212,163,0,0.035), transparent 72%);
    text-align:center;
  }
  .listing-card .card-header h3 {
    margin: 0; font-weight: 800; font-size: 1.16rem; letter-spacing: .2px; color: #081226;
  }
  .listing-card .card-header small {
    display:block; margin-top:.26rem; color:var(--muted); font-weight:600; font-size:.92rem;
  }

  .card-body { padding:1.45rem 1.5rem; }

  /* Form labels & inputs */
  .form-label { font-weight:700; color:#071124; font-size:.95rem; display:block; margin-bottom:.45rem; }
  .form-control {
    height: var(--input-height);
    border-radius:12px;
    border:1px solid #e6e9ee;
    padding:.6rem .9rem;
    background: linear-gradient(180deg,#ffffff,#fbfcfd);
    box-shadow: inset 0 3px 8px rgba(16,24,40,0.03);
    transition: box-shadow .12s ease, border-color .12s ease, transform .06s ease;
    font-size: .95rem;
    color:#071124;
    -webkit-appearance: none;
    -moz-appearance: none;
  }
  .form-control::placeholder { color:var(--muted-2); opacity:1; }
  .form-control:focus {
    outline: none; border-color: var(--gold); box-shadow: 0 12px 36px var(--focus-ring); transform: translateY(-1px);
  }
  textarea.form-control { min-height: 120px; resize: vertical; padding-top:.85rem; padding-bottom:.85rem; }

  .form-text { color:var(--muted); font-size:.88rem; margin-top:.36rem; display:block; }
  .field-note { color:var(--muted); font-size:.87rem; }

  /* File input wrapper — tactile and realistic */
  .file-wrap { display:flex; gap:var(--ui-gap); align-items:center; }
  .file-thumb {
    width:148px; height:100px; border-radius:var(--radius-sm); overflow:hidden;
    background:linear-gradient(180deg,#fbfdff 0%, #f3f6fb 60%);
    border:1px solid rgba(15,23,42,0.03);
    display:flex; align-items:center; justify-content:center; color:#94a3b8; font-size:.98rem;
    box-shadow: 0 10px 26px rgba(16,24,40,0.05);
    flex-shrink:0;
    transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
    position:relative; cursor:default;
  }

  .file-thumb:hover { transform: translateY(-3px); box-shadow: 0 20px 44px rgba(16,24,40,0.07); border-color: rgba(255,56,92,0.06); }
  .file-thumb img { width:100%; height:100%; object-fit:cover; display:block; animation: fadeIn .38s ease; }

  @keyframes fadeIn { from { opacity:0; transform: scale(1.02); } to { opacity:1; transform: scale(1); } }

  /* overlay on thumb (filename + actions) */
  .thumb-overlay {
    position:absolute; left:0; right:0; bottom:0;
    padding:8px 10px; display:flex; justify-content:space-between; align-items:center;
    background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.45) 100%);
    backdrop-filter: blur(3px); color:#fff; font-size:12px;
    z-index:5;
  }
  .thumb-filename { font-weight:600; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; max-width:62%; }
  .thumb-actions { display:flex; gap:8px; }
  .thumb-btn {
    border:0; background: rgba(255,255,255,0.12); color:#fff; padding:5px 8px; border-radius:8px;
    font-size:12px; display:flex; gap:6px; align-items:center; cursor:pointer;
  }
  .thumb-btn:hover { background: rgba(255,255,255,0.22); }

  .file-meta { flex:1; display:flex; flex-direction:column; gap:6px; min-width:0; }
  .file-meta .file-name { font-weight:700; color:#071124; font-size:.93rem; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }
  .file-meta .file-sub { color:var(--muted); font-size:.86rem; }

  .row .col-md-4, .row .col-md-8 { margin-bottom:.85rem; }

  /* validation visuals */
  .is-invalid { border-color: #ef4444 !important; box-shadow:none !important; }
  .invalid-feedback { color:#b91c1c; font-size:.88rem; margin-top:.35rem; display:none; }
  .was-validated .is-invalid + .invalid-feedback { display:block; }

  /* refined buttons */
  .btn-primary {
    background: linear-gradient(90deg, var(--gold), var(--gold-dark));
    color:#071124; border:none; padding:.68rem 1.15rem; border-radius:12px; font-weight:800;
    box-shadow: 0 16px 40px rgba(179,139,0,0.12);
    transition: transform .12s ease, box-shadow .12s ease, opacity .12s ease;
  }
  .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 28px 68px rgba(179,139,0,0.14); }
  .btn-outline-secondary {
    border-radius:10px; border:1px solid rgba(15,23,42,0.06); color:#374151; background:transparent; padding:.62rem .9rem;
  }

  @media (max-width:576px){
    .file-wrap { flex-direction:column; align-items:stretch; gap:10px; }
    .file-thumb{ width:100%; height:160px; }
    .btn-primary{ width:100%; }
    .card-body{ padding:1rem; }
  }

  .form-footer-note { color:var(--muted); font-size:.85rem; margin-left:auto; }

  /* accessible focus */
  .form-control:focus-visible, .btn-primary:focus-visible, .file-thumb:focus-visible {
    outline: 3px solid rgba(212,163,0,0.08);
    outline-offset: 3px;
  }

  /* small tweak for native file input */
  input[type="file"].form-control { font-size:.9rem; padding:.42rem .68rem; height:auto; cursor:pointer; }

  .thumb-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 6px 8px;
  display: flex;
  flex-direction: column;       /* filename upar, buttons niche */
  gap: 6px;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.65) 100%);
  backdrop-filter: blur(3px);
  color: #fff;
  font-size: 12px;
  z-index: 10;
  border-radius: 6px;
  box-sizing: border-box;
}

.thumb-filename {
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.thumb-actions {
  display: flex;
  flex-direction: row;          /* buttons ek line me */
  justify-content: flex-end;    /* right align */
  gap: 6px;
}

.thumb-btn {
  border: 0;
  background: rgba(255,255,255,0.2);
  color: #fff;
  padding: 4px 2px;
  border-radius: 6px;
  font-size: 12px;
  cursor: pointer;
  transition: background 0.2s ease;
  white-space: nowrap;
}
.thumb-btn i {
  font-size: 10px;
}
.thumb-btn:hover {
  background: rgba(255,255,255,0.35);
}

</style>

<div class="row mt-4">
  <div class="col-lg-7 col-md-11 col-sm-10 mx-auto">
    <div class="card listing-card shadow-sm border-0 rounded-4 overflow-hidden">
      
      <div class="card-header text-black text-center py-3">
        <h3 class="mb-0 fw-bold">✏️ Edit Listing</h3>
        <small class="text-muted">Update fields below and replace the image if needed.</small>
      </div>

      <div class="card-body p-4"> 
        <!-- Keep form method & names same, use PUT via query-string _method -->
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" class="needs-validation" id="editListingForm" novalidate>
          
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="listing[title]"
              id="title"
              value="<%= listing.title %>"
              placeholder="e.g. Cozy 1BR near central park with balcony"
              class="form-control"
              required
              autocomplete="off"
              aria-describedby="titleHelp"
            />
            <div id="titleHelp" class="form-text">Short and descriptive — include neighborhood or standout amenity.</div>
            <div class="invalid-feedback">Title is required.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="listing[description]"
              id="description"
              class="form-control"
              placeholder="Write a brief description (highlights, vibe, who it's good for)"
              rows="3"
              required
              autocomplete="off"
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Description is required.</div>
          </div>

          <!-- Existing Image (small preview) + Replace -->
          <div class="mb-3">
            <label class="form-label">Original Listing Image</label>
            <div class="file-wrap mb-2">
              <div class="file-thumb" id="fileThumbExisting" aria-hidden="true">
                <% if (originalImageUrl) { %>
                  <img src="<%= originalImageUrl %>" alt="original">
                <% } else { %>
                  <i class="fa-regular fa-image" style="font-size:28px;color:var(--muted-2);"></i>
                <% } %>
              </div>
              <div class="file-meta">
                <span class="file-name"><%= listing.title || 'Listing image' %></span>
                <span class="file-sub">Current primary image — upload a new one below to replace it.</span>
              </div>
            </div>

            <label for="image" class="form-label">Upload New Image</label>
            <div class="file-wrap">
              <div class="file-thumb" id="fileThumb" role="img" aria-label="Preview area">
                <i class="fa-regular fa-image" style="font-size:28px;color:var(--muted-2);"></i>
              </div>

              <div class="file-meta">
                <span class="file-name" id="fileLabel">No file selected</span>
                <input
                  type="file"
                  name="listing[image]"
                  id="image"
                  class="form-control"
                  accept="image/*"
                  aria-describedby="imageHelp"
                />
                <div id="imageHelp" class="form-text">Optional — JPG/PNG. Max recommended 5MB.</div>
                <div class="invalid-feedback">If uploading, please choose a valid image (<=5MB).</div>
              </div>
            </div>
          </div>

          <div class="row">
            <!-- Price -->
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price (₹)</label>
              <input
                type="number"
                name="listing[price]"
                id="price"
                value="<%= listing.price %>"
                placeholder="1200"
                class="form-control"
                required
                min="0"
                autocomplete="off"
              />
              <div class="invalid-feedback">Price should be valid.</div>
            </div>

            <!-- Country -->
            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="listing[country]"
                id="country"
                value="<%= listing.country %>"
                placeholder="India"
                class="form-control"
                required
                autocomplete="country-name"
              />
              <div class="invalid-feedback">Country is required.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              id="location"
              value="<%= listing.location %>"
              placeholder="e.g. Bandra West, Mumbai"
              class="form-control"
              required
              autocomplete="address-level2"
            />
            <div class="form-text">We will geocode this location to place it on the map (exact address won't be public).</div>
            <div class="invalid-feedback">Location is required.</div>
          </div>

          <!-- Submit -->
          <div class="d-flex align-items-center gap-2">
            <button type="submit" class="btn btn-primary" id="submitBtn">💾 Save Changes</button>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary">Cancel</a>
            <div class="ms-auto form-footer-note">Changes will update instantly after save.</div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict';
    const MAX_SIZE = 5 * 1024 * 1024; // 5MB
    const form = document.getElementById('editListingForm');
    const imageInput = document.getElementById('image');
    const fileThumb = document.getElementById('fileThumb');
    const fileLabel = document.getElementById('fileLabel');
    const submitBtn = document.getElementById('submitBtn');

    function clearThumbToPlaceholder() {
      fileThumb.innerHTML = '<i class="fa-regular fa-image" style="font-size:28px;color:var(--muted-2);"></i>';
      fileLabel.textContent = 'No file selected';
    }

    function removeOverlay() {
      const ov = fileThumb.querySelector('.thumb-overlay');
      if (ov) ov.remove();
    }

    function addOverlay(filename) {
      removeOverlay();
      const overlay = document.createElement('div');
      overlay.className = 'thumb-overlay';

      const nameDiv = document.createElement('div');
      nameDiv.className = 'thumb-filename';
      nameDiv.textContent = filename;
      nameDiv.title = filename;

      const actions = document.createElement('div');
      actions.className = 'thumb-actions';

      const changeBtn = document.createElement('button');
      changeBtn.type = 'button'; changeBtn.className = 'thumb-btn';
      changeBtn.innerHTML = '<i class="fa-solid fa-pen"></i> Change';
      changeBtn.addEventListener('click', function () { imageInput.click(); });

      const removeBtn = document.createElement('button');
      removeBtn.type = 'button'; removeBtn.className = 'thumb-btn';
      removeBtn.innerHTML = '<i class="fa-solid fa-xmark"></i> Remove';
      removeBtn.addEventListener('click', function () {
        imageInput.value = '';
        clearThumbToPlaceholder();
        removeOverlay();
      });

      actions.appendChild(changeBtn);
      actions.appendChild(removeBtn);
      overlay.appendChild(nameDiv);
      overlay.appendChild(actions);
      fileThumb.appendChild(overlay);
    }

    // preview for newly selected file
    imageInput.addEventListener('change', function () {
      const f = this.files && this.files[0];
      if (!f) {
        clearThumbToPlaceholder();
        removeOverlay();
        return;
      }

      // basic validation
      if (!f.type.startsWith('image/')) {
        this.classList.add('is-invalid');
        fileThumb.innerHTML = 'Invalid file';
        fileLabel.textContent = f.name;
        removeOverlay();
        return;
      }
      if (f.size > MAX_SIZE) {
        this.classList.add('is-invalid');
        fileLabel.textContent = `${f.name} — Too large`;
        fileThumb.innerHTML = 'Too large';
        removeOverlay();
        return;
      }

      this.classList.remove('is-invalid');
      fileLabel.textContent = `${f.name} · ${(Math.round(f.size / 1024)).toLocaleString()} KB`;

      const reader = new FileReader();
      reader.onload = function (e) {
        // create image preview
        fileThumb.innerHTML = '';
        const img = new Image();
        img.src = e.target.result;
        img.alt = f.name;
        img.style.width = '100%';
        img.style.height = '100%';
        img.style.objectFit = 'cover';
        fileThumb.appendChild(img);
        addOverlay(f.name);
      };
      reader.readAsDataURL(f);
    });

    // submit validation + prevent double submit
    form.addEventListener('submit', function (e) {
      imageInput.classList.remove('is-invalid');

      const file = imageInput.files && imageInput.files[0];
      let ok = true;
      if (file && file.size > MAX_SIZE) {
        imageInput.classList.add('is-invalid');
        ok = false;
      }

      if (!form.checkValidity() || !ok) {
        e.preventDefault();
        e.stopPropagation();
        form.classList.add('was-validated');
        return;
      }

      // prevent double submit
      submitBtn.disabled = true;
      submitBtn.textContent = '⏳ Saving...';
    }, false);

    // Initialize placeholders if no selection
    (function init() {
      if (!imageInput.value) {
        // keep the existing preview (original) untouched; only set placeholder for the "new" thumb area
        clearThumbToPlaceholder();
      }
    })();
  })();
</script>
