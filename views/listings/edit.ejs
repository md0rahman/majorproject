<div class="row mt-4">
  <div class="col-lg-7 col-md-11 col-sm-10 mx-auto">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="background: linear-gradient(145deg, #ffffff, #f8f9fa);">
      <div class="card-header text-center text-black py-3">
        <h3 class="mb-0 fw-bold">‚úèÔ∏è Edit Listing</h3>
      </div>
      <div class="card-body p-4">
        
        <form class="needs-validation" method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate enctype="multipart/form-data">
          
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input 
              type="text"
              name="listing[title]" 
              id="title"
              value="<%= listing.title %>" 
              class="form-control" 
              required
              autocomplete="off"
            />
            <div class="invalid-feedback">Please enter a title.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea 
              name="listing[description]" 
              id="description" 
              class="form-control" 
              rows="3" 
              required
              autocomplete="off"
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a description.</div>
          </div>
         <!-- Existing Image -->
         <div class="mb-3">
            <label for="description" class="form-label">Original Listing Image</label><br>
             <img class="rounded-4"
              src="<%= originalImageUrl %>" 
             >
         </div>
          <!-- Image -->
          <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input 
              type="file" 
              name="listing[image]" 
              id="image" 
              class="form-control"
              autocomplete="off"
            />
          </div>

          <div class="row">
            <!-- Price -->
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price (‚Çπ)</label>
              <input 
                type="number" 
                name="listing[price]" 
                id="price"
                value="<%= listing.price %>" 
                class="form-control" 
                required
                min="0"
                autocomplete="off"
              />
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <!-- Country -->
            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">Country</label>
              <input 
                type="text" 
                name="listing[country]" 
                id="country" 
                value="<%= listing.country %>" 
                class="form-control" 
                required
                autocomplete="country-name"
              />
              <div class="invalid-feedback">Please enter a country.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input 
              type="text" 
              name="listing[location]" 
              id="location" 
              value="<%= listing.location %>" 
              class="form-control" 
              required
              autocomplete="address-level2"
            />
            <div class="invalid-feedback">Please enter a location.</div>
          </div>

          <!-- Submit -->
          <div>
            <button type="submit" class="btn btn-primary">üíæ Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
(() => {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>
