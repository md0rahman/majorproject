<!-- views/listings/edit.ejs -->
<style>
  :root {
    --gold: #d4a300;
    --gold-dark: #b38b00;
    --muted: #6b7280;
    --radius: 16px;
    --soft-shadow: 0 10px 30px rgba(16,24,40,0.08);
    --xl-shadow: 0 18px 50px rgba(16,24,40,0.10);
  }

  .listing-card {
    border-radius: var(--radius);
    overflow: hidden;
    border: 1px solid rgba(15,23,42,0.04);
    background: linear-gradient(180deg, #ffffff 0%, rgba(212,163,0,0.03) 20%, #fbfcfd 60%, #f6f7f5 100%);
    box-shadow: var(--xl-shadow);
    transition: transform .18s ease, box-shadow .18s ease;
  }
  .listing-card:hover { transform: translateY(-4px); box-shadow: 0 30px 70px rgba(16,24,40,0.12); }

  .listing-card .card-header {
    padding: 1.1rem 1.5rem;
    border-bottom: 1px solid rgba(15,23,42,0.03);
    background: linear-gradient(90deg, rgba(79, 62, 4, 0.035), transparent 70%);
    text-align: center;
  }
  .listing-card .card-header h3 { margin: 0; font-weight:800; font-size:1.2rem; letter-spacing: .2px; }
  .listing-card .card-header small { display:block; margin-top:.25rem; color:var(--muted); font-weight:600; letter-spacing: .1px; }

  .card-body { padding:1.25rem 1.5rem; }

  .form-label { font-weight:700; color:#0f1724; font-size:.95rem; display:block; margin-bottom:.35rem; }
  .form-control {
    border-radius:12px;
    border:1px solid #e6e9ee;
    padding:.62rem .75rem;
    background:linear-gradient(180deg,#fff,#fbfcfd);
    box-shadow: 0 4px 14px rgba(16,24,40,0.03) inset;
    transition: box-shadow .14s ease, border-color .14s ease, transform .08s ease;
    font-size: .95rem;
    color:#0b1220;
  }
  .form-control::placeholder { color:#9aa3b2; opacity:1; }
  .form-control:focus {
    outline: none;
    border-color: var(--gold);
    box-shadow: 0 10px 30px rgba(212,163,0,0.08);
    transform: translateY(-1px);
  }
  textarea.form-control { min-height: 92px; resize: vertical; }

  .form-text { color:var(--muted); font-size:.88rem; margin-top:.38rem; display:block; }
  .field-note { color:var(--muted); font-size:.87rem; }

  .file-wrap { display:flex; gap:12px; align-items:center; }
  .file-thumb {
    width:120px; height:84px; border-radius:10px; overflow:hidden;
    background:linear-gradient(180deg,#f6f7f9,#fff);
    border:1px solid rgba(15,23,42,0.03);
    display:flex; align-items:center; justify-content:center; color:#94a3b8; font-size:.9rem;
  }
  .file-thumb img { width:100%; height:100%; object-fit:cover; display:block; }
  .file-meta { flex:1; display:flex; flex-direction:column; gap:6px; }
  .file-meta .file-name { font-weight:700; color:#0b1220; font-size:.92rem; }
  .file-meta .file-sub { color:var(--muted); font-size:.86rem; }

  .row .col-md-4, .row .col-md-8 { margin-bottom:.8rem; }

  .is-invalid { border-color: #ef4444 !important; box-shadow:none !important; }
  .invalid-feedback { color:#b91c1c; font-size:.88rem; margin-top:.35rem; display:none; }
  .was-validated .is-invalid + .invalid-feedback { display:block; }

  .btn-primary {
    background: linear-gradient(90deg, var(--gold), var(--gold-dark));
    color:#0b1220;
    border:none;
    padding:.62rem 1.1rem;
    border-radius:12px;
    font-weight:800;
    box-shadow: 0 12px 30px rgba(179,139,0,0.12);
    transition: transform .12s ease, box-shadow .12s ease, opacity .12s ease;
  }
  .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 18px 44px rgba(179,139,0,0.14); }
  .btn-outline-secondary {
    border-radius:10px; border:1px solid rgba(15,23,42,0.06); color:#374151; background:transparent; padding:.58rem .85rem;
  }

  @media (max-width:576px) {
    .file-wrap { flex-direction:column; align-items:stretch; }
    .file-thumb{ width:100%; height:160px; }
    .btn-primary { width:100%; }
  }

  .form-footer-note { color:var(--muted); font-size:.85rem; margin-left:auto; }
</style>

<div class="row mt-4">
  <div class="col-lg-7 col-md-11 col-sm-10 mx-auto">
    <div class="card listing-card shadow-sm border-0 rounded-4 overflow-hidden">
      
      <div class="card-header text-black text-center py-3">
        <h3 class="mb-0 fw-bold">‚úèÔ∏è Edit Listing</h3>
        <small class="text-muted">Update fields below and replace the image if needed.</small>
      </div>

      <div class="card-body p-4"> 
        <!-- Keep form method & names same, use PUT via query-string _method -->
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" class="needs-validation" id="editListingForm" novalidate>
          
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="listing[title]"
              id="title"
              value="<%= listing.title %>"
              placeholder="e.g. Cozy 1BR near central park with balcony"
              class="form-control"
              required
              autocomplete="off"
              aria-describedby="titleHelp"
            />
            <div id="titleHelp" class="form-text">Short and descriptive ‚Äî include neighborhood or standout amenity.</div>
            <div class="invalid-feedback">Title is required.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="listing[description]"
              id="description"
              class="form-control"
              placeholder="Write a brief description (highlights, vibe, who it's good for)"
              rows="3"
              required
              autocomplete="off"
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Description is required.</div>
          </div>

          <!-- Existing Image (small preview) + Replace -->
          <div class="mb-3">
            <label class="form-label">Original Listing Image</label>
            <div class="file-wrap mb-2">
              <div class="file-thumb" id="fileThumbExisting">
                <% if (originalImageUrl) { %>
                  <img src="<%= originalImageUrl %>" alt="original">
                <% } else { %>
                  Preview
                <% } %>
              </div>
              <div class="file-meta">
                <span class="file-name"><%= listing.title || 'Listing image' %></span>
                <span class="file-sub">Current primary image ‚Äî upload a new one below to replace it.</span>
              </div>
            </div>

            <label for="image" class="form-label">Upload New Image</label>
            <div class="file-wrap">
              <div class="file-thumb" id="fileThumb">Preview</div>
              <div class="file-meta">
                <span class="file-name" id="fileLabel">No file selected</span>
                <input
                  type="file"
                  name="listing[image]"
                  id="image"
                  class="form-control"
                  accept="image/*"
                  aria-describedby="imageHelp"
                />
                <div id="imageHelp" class="form-text">Optional ‚Äî JPG/PNG. Max recommended 5MB.</div>
                <div class="invalid-feedback">If uploading, please choose a valid image (<=5MB).</div>
              </div>
            </div>
          </div>

          <div class="row">
            <!-- Price -->
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price (‚Çπ)</label>
              <input
                type="number"
                name="listing[price]"
                id="price"
                value="<%= listing.price %>"
                placeholder="1200"
                class="form-control"
                required
                min="0"
                autocomplete="off"
              />
              <div class="invalid-feedback">Price should be valid.</div>
            </div>

            <!-- Country -->
            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="listing[country]"
                id="country"
                value="<%= listing.country %>"
                placeholder="India"
                class="form-control"
                required
                autocomplete="country-name"
              />
              <div class="invalid-feedback">Country is required.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              id="location"
              value="<%= listing.location %>"
              placeholder="e.g. Bandra West, Mumbai"
              class="form-control"
              required
              autocomplete="address-level2"
            />
            <div class="form-text">We will geocode this location to place it on the map (exact address won't be public).</div>
            <div class="invalid-feedback">Location is required.</div>
          </div>

          <!-- Submit -->
          <div class="d-flex align-items-center gap-2">
            <button type="submit" class="btn btn-primary" id="submitBtn">üíæ Save Changes</button>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary">Cancel</a>
            <div class="ms-auto form-footer-note">Changes will update instantly after save.</div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict';

    const MAX_SIZE = 5 * 1024 * 1024; // 5MB
    const form = document.getElementById('editListingForm');
    const imageInput = document.getElementById('image');
    const fileThumb = document.getElementById('fileThumb');
    const fileLabel = document.getElementById('fileLabel');
    const submitBtn = document.getElementById('submitBtn');

    // preview for newly selected file
    imageInput.addEventListener('change', function () {
      const f = this.files && this.files[0];
      if (!f) {
        fileThumb.textContent = 'Preview';
        fileLabel.textContent = 'No file selected';
        return;
      }
      if (!f.type.startsWith('image/')) {
        fileThumb.textContent = 'Invalid file';
        fileLabel.textContent = f.name;
        this.classList.add('is-invalid');
        return;
      }
      if (f.size > MAX_SIZE) {
        this.classList.add('is-invalid');
        fileLabel.textContent = `${f.name} ‚Äî Too large`;
        fileThumb.textContent = 'Too large';
        return;
      }

      this.classList.remove('is-invalid');
      fileLabel.textContent = `${f.name} ¬∑ ${(Math.round(f.size/1024)).toLocaleString()} KB`;
      const reader = new FileReader();
      reader.onload = function (e) {
        const img = new Image();
        img.src = e.target.result;
        img.style.width = '100%';
        img.style.height = '100%';
        img.style.objectFit = 'cover';
        fileThumb.innerHTML = '';
        fileThumb.appendChild(img);
      };
      reader.readAsDataURL(f);
    });

    // simple validation + prevent double submit
    form.addEventListener('submit', function (e) {
      // reset validation for image
      imageInput.classList.remove('is-invalid');

      const file = imageInput.files && imageInput.files[0];
      let ok = true;
      if (file && file.size > MAX_SIZE) {
        imageInput.classList.add('is-invalid');
        ok = false;
      }

      if (!form.checkValidity() || !ok) {
        e.preventDefault();
        e.stopPropagation();
        form.classList.add('was-validated');
        return;
      }

      submitBtn.disabled = true;
      submitBtn.textContent = '‚è≥ Saving...';
    }, false);
  })();
</script>
