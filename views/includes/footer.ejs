<style>
  .air-footer{
    background:#f7f7f7;
    font-size:14px;
    color:#444;
    margin-top:40px;
  }
  .air-footer .container{
    max-width:1280px;
    margin:0 auto;
    padding:40px 20px 20px;
  }

  /* Top link columns */
  .footer-cols{
    display:grid;
    grid-template-columns:repeat(auto-fit,minmax(180px,1fr));
    gap:30px;
    margin-bottom:30px;
  }
  .footer-col h5{
    font-size:14px;
    font-weight:700;
    margin-bottom:10px;
  }
  .footer-col a{
    display:block;
    margin:6px 0;
    color:#444;
    text-decoration:none;
  }
  .footer-col a:hover{ text-decoration:underline; }

  /* Bottom row */
  .footer-bottom{
    display:flex;
    flex-wrap:wrap;
    justify-content:space-between;
    align-items:center;
    padding:16px 0;
    border-top:1px solid #ddd;
    font-size:13px;
  }
  .footer-bottom-left{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
    align-items:center;
  }
  .footer-bottom-left a{ color:#444; text-decoration:none; }
  .footer-bottom-left a:hover{ text-decoration:underline; }

  .footer-bottom-right{
    display:flex;
    align-items:center;
    gap:18px;
    flex-wrap:wrap;
  }
  .lang-curr{ display:flex; gap:14px; align-items:center; }
  .lang-curr i{ margin-right:4px; }

  .footer-socials{ display:flex; gap:14px; }
  .footer-socials a{ color:#444; font-size:16px; }
  .footer-socials a:hover{ color:#000; }

  @media(max-width:768px){
    .footer-cols{ grid-template-columns:1fr 1fr; gap:20px; }
    .footer-bottom{ flex-direction:column; gap:10px; align-items:flex-start; }
  }
</style>

